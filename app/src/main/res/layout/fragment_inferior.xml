<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="bottom"
    android:elevation="8dp"
    android:background="@android:color/white">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_buscar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_buscar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_search_24" />
            <TextView
                android:id="@+id/txt_buscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_publicar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_publicar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icons8_add_50" />
            <TextView
                android:id="@+id/txt_publicar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publicar" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_tus_anuncios"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_tus_anuncios"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_pets_24" />
            <TextView
                android:id="@+id/txt_tus_anuncios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="12sp"
                android:text="Tus anuncios" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_mensajes"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_mensajes"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_chat_bubble_outline_24" />
            <TextView
                android:id="@+id/txt_mensajes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mensajes" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_perfil"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_perfil"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_account_circle_24" />
            <TextView
                android:id="@+id/txt_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>