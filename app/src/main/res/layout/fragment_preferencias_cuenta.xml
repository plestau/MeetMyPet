<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".FragmentPreferenciasCuenta">

    <TextView
        android:id="@+id/cambiarFotoPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar foto de perfil"
        android:textColor="@color/texto"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:padding="16dp" />

    <View
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/cambiarDatosPersonales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar datos personales"
        android:textColor="@color/texto"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/cambiarContrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar contraseña"
        android:textColor="@color/texto"
        android:textSize="18sp"
        android:padding="16dp" />

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="15dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/cerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar sesión"
        android:textColor="@color/texto"
        android:textSize="18sp"
        android:padding="16dp" />
</LinearLayout>